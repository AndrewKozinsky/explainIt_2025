{
	"moduleFileExtensions": [
		"js",
		"json",
		"ts"
	],
	"rootDir": ".",
	"testEnvironment": "node",
	"testRegex": ".e2e-spec.ts$",
	"transform": {
		"^.+\\.(t|j)s$": ["ts-jest"]
	},
	"maxWorkers": "100%",
	"transformIgnorePatterns": [
		"/node_modules/"
	],
	"globals": {
		"ts-jest": {
			"isolatedModules": true
		}
	}
}
